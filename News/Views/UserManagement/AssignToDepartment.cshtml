@model News.Models.AssignToDepartment

@{
    ViewData["Title"] = "AssignToDepartment";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AssignToDepartment</h2>

<h4>AssignToDepartment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="UserManagement" asp-action="AssignToDepartment" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" value="@ViewBag.Id" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" value="@ViewBag.UserName" readonly />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label"></label>
                <input asp-for="DepartmentName" class="form-control" value="@ViewBag.DepartmentName" readonly />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label s>Choose department name:</label>

                <select name="DepartmentId">
                    @foreach (var item in @ViewBag.Department)
                    {
                        <option value="@item.department_Id">@item.department_Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

</form>
</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

