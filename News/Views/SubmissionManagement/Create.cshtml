            </div>
            <div class="form-group">
                <label asp-for="submission_StartTime" class="control-label"></label>
                <input asp-for="submission_StartTime" class="form-control" />
                <span asp-validation-for="submission_StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="submission_DueTime" class="control-label"></label>
                <input asp-for="submission_DueTime" class="form-control" />
                <span asp-validation-for="submission_DueTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
